# Loterias Docker Environment
# Copy to .env and fill in values before running docker compose
# Backend fetches DB creds, DD keys, and Loki URL from Vault at startup

# --- Vault bootstrap ---
VAULT_ADDR=http://VAULT_HOST:VAULT_PORT
VAULT_ROLE_ID=
VAULT_SECRET_ID=

# --- Spring ---
SPRING_PROFILES_ACTIVE=prod,datadog

# --- Datadog unified service tags ---
DD_SERVICE=loterias
DD_ENV=prod
DD_VERSION=0.0.1
DD_AGENT_ENABLED=true
DD_AGENT_HOST=host.docker.internal

# --- Nginx ---
NGINX_PORT=80
